#!/usr/bin/with-contenv bash

# Determine if setup is needed
if ! command -v git; then
## Ubuntu
    if [ -f /usr/bin/apt ]; then
        apt-get install --no-install-recommends -y \
            git
    fi
    # Alpine
    if [ -f /sbin/apk ]; then
        apk add --no-cache \
            git
    fi
fi
